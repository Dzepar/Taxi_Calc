<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_crazy_taxi_calc"
    tools:context=".CrazyTaxiCalc"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="clip_horizontal">

    <EditText
        android:id="@+id/kmStartEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:inputType="number|numberDecimal"
        android:layout_marginLeft="7dp"
        android:hint="@string/start"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        />

    <EditText
        android:id="@+id/kmEndEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:inputType="number|numberDecimal"
        android:hint="@string/end"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:layout_alignTop="@+id/kmStartEditText"
        android:layout_toRightOf="@+id/kmStartEditText"
         />

    <TextView
        android:id="@+id/kmTotalEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:hint="@string/km_total"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical"
        android:autoText="false"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/kmEndEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignTop="@+id/kmEndEditText" />

    <TextView
        android:id="@+id/priceEditTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/price"
        android:layout_gravity="center_vertical"
        android:inputType="number|numberDecimal"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:layout_below="@+id/kmTotalEditText"
        android:layout_alignRight="@+id/kmTotalEditText"
        android:layout_alignEnd="@+id/kmTotalEditText"
        android:layout_alignLeft="@+id/kmTotalEditText"
        android:layout_alignStart="@+id/kmTotalEditText" />

</RelativeLayout>


